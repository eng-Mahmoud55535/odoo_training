<odoo>
    <record id="view_project_form_custom" model="ir.ui.view">
        <field name="name">project.project.form.custom</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_days"/>
                <field name="project_user"/>
                <field name="project_actual_days"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <button name="action_create_lead" string="Create Lead" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>

