<odoo>
    <record id="view_crm_lead_form_inherit_user" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.user</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="crm_lead_user_id"/>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_crm_lead_extension"
              name="CRM Lead"
              parent="base.menu_sales"
              sequence="20 " 
              groups="crm_lead_extension.group_crm_lead_manager"/>
   <record id="view_crm_lead_tree_inherit" model="ir.ui.view">
        <field name="name">crm.lead.tree.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_lead_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="lead_visibility" position="after">
                    <filter string="My Leads" domain="[('lead_visibility','=','user')]"/>
                    <filter string="Admin Leads" domain="[('lead_visibility','=','admin')]"/>
                </field>
            </tree>
        </field>
     </record> 
</odoo>
